<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_buah"
    android:padding="16dp"
    tools:context=".TebakActivity">

    <!-- Header: Skor, Timer, dan Pause -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <!-- Skor di kiri -->
        <TextView
            android:id="@+id/tvScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skor: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1" />

        <!-- Timer di tengah -->
        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu: 60"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginEnd="16dp" />

        <!-- Tombol Pause di kanan -->
        <ImageButton
            android:id="@+id/btnPause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_pause"
            android:contentDescription="Pause Game" />
    </LinearLayout>

    <!-- Gambar Pertanyaan -->
    <ImageView
        android:id="@+id/imageViewQuestion"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/headerLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"
        android:contentDescription="Gambar Pertanyaan" />

    <!-- Slot Jawaban -->
    <LinearLayout
        android:id="@+id/layoutAnswerSlots"
        android:layout_below="@id/imageViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <!-- Pilihan Huruf -->
    <LinearLayout
        android:id="@+id/layoutLetters"
        android:layout_below="@id/layoutAnswerSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center" />

    <!-- Tombol Cek Jawaban -->
    <Button
        android:id="@+id/btnCheck"
        android:layout_below="@id/layoutLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEK JAWABAN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <!-- Tombol Next -->
    <Button
        android:id="@+id/btnNext"
        android:layout_below="@id/btnCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:visibility="gone" />

</RelativeLayout>

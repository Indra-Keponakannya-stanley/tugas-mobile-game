<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_popup2"
    android:gravity="center">

    <Button
        android:id="@+id/popupBtnPuzzle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Puzzle Buah" />

    <Button
        android:id="@+id/popupBtnPerhitungan"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Perhitungan" />

    <Button
        android:id="@+id/popupBtnMemory"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Mengingat Gambar Buah" />

    <Button
        android:id="@+id/popupBtnTebak"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Tebak Kata" />

    <Button
        android:id="@+id/popupBtnFlappy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Flappy Bird" />

</LinearLayout>
